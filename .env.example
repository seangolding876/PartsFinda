# PartsFinda Marketplace Environment Configuration
# Copy this file to .env.local for development or configure in your deployment platform

# ======================
# REQUIRED FOR DEPLOYMENT
# ======================

# Application URLs
NEXT_PUBLIC_SITE_URL=https://your-partsfinda-site.netlify.app
NEXT_PUBLIC_APP_NAME=PartsFinda Jamaica

# ======================
# STRIPE PAYMENT PROCESSING (REQUIRED)
# ======================
# Get these from https://dashboard.stripe.com/apikeys
# For production, use live keys (pk_live_..., sk_live_...)
# For testing, use test keys (pk_test_..., sk_test_...)

NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_live_your_publishable_key_here
STRIPE_SECRET_KEY=sk_live_your_secret_key_here

# Stripe Webhooks (for payment event handling)
# Create webhook at: https://dashboard.stripe.com/webhooks
# Point to: https://your-site.com/api/webhooks/stripe
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# ======================
# DATABASE CONFIGURATION
# ======================

# Database (Supabase - REQUIRED for user auth, profiles, and data storage)
# Get these from: https://supabase.com/dashboard/project/[your-project]/settings/api
# Leave blank to use mock database mode (no user features)
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key

# ======================
# OPTIONAL SERVICES
# ======================

# Email Service (Resend - for notifications)
RESEND_API_KEY=re_your_resend_api_key

# File Storage (Cloudinary - for image uploads)
NEXT_PUBLIC_CLOUDINARY_CLOUD_NAME=your_cloudinary_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret

# ======================
# SECURITY & AUTHENTICATION
# ======================

JWT_SECRET=your_super_secure_jwt_secret_minimum_32_characters
COOKIE_SECRET=your_secure_cookie_secret_minimum_32_characters

# ======================
# EXTERNAL APIs
# ======================

# VIN Decoder (already configured)
NHTSA_VIN_API_URL=https://vpic.nhtsa.dot.gov/api/vehicles

# ======================
# BUSINESS CONFIGURATION
# ======================

# Payment settings
PLATFORM_FEE_PERCENTAGE=3.0
ESCROW_HOLD_PERIOD_DAYS=7
CURRENCY=JMD

# Admin settings
ADMIN_EMAIL=admin@partsfinda.com

# ======================
# PRODUCTION SETTINGS
# ======================

NODE_ENV=production
SECURE_COOKIES=true
FORCE_HTTPS=true
